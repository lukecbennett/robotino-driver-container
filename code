# Create workspace
mkdir -p ~/robotino_driver_ws/src
cd ~/robotino_driver_ws/src

# Clone the driver
git clone https://github.com/robocup-logistics/ros2-robotino.git

# Install any ROS deps (should be minimal)
cd ~/robotino_driver_ws
rosdep install --from-paths src --ignore-src -r -y

# Build
colcon build --symlink-install

# Source the workspace
echo "source ~/robotino_driver_ws/install/setup.bash" >> ~/.bashrc
source ~/.bashrc
